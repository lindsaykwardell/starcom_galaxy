<p id="notice"><%= notice %></p>

<h1>Systems</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Name</th>
      <th>Description</th>
      <th>Credits Income</th>
      <th>Industry Income</th>
      <th>Research Income</th>
      <th>Empire</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @systems.each do |system| %>
    <tr>
      <td><%= system.location %></td>
      <td><%= system.name %></td>
      <td><%= system.description %></td>
      <td><%= system.credits_production %>/<%= system.credits_base %></td>
      <td><%= system.industry_production %>/<%= system.industry_base %></td>
      <td><%= system.research_production %>/<%= system.research_base %></td>
      <td><%= system.empire_id %></td>
      <td><%= link_to 'Show', system %></td>
      <td><%= link_to 'Edit', edit_system_path(system) %></td>
      <td><%= link_to 'Destroy', system, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>